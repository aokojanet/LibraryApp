@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Library User</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/LibrarySystem.styles.css" asp-append-version="true" />
	<style>

		.sideMenu {
			background-color: rebeccapurple;
			display: flex;
			height: 800px;
			padding-top: 30px;
			font-size: 15px;
			text-decoration-color: white;
			justify-content: center;
			box-sizing: border-box;
		}
	</style>
</head>
<body>
	<div class="row">
		<div class="col-md-2 sideMenu">
			<!-- menu -->
				<div class="col-md-2">
					<div class="row">
						<a href="~/Books/Index" class="text-primary">Books</a>
					</div>
					<div class="row">
						<a href="~/Authors/Index" class="text-primary">Authors</a>
					</div>
				</div>

		</div>
		<div class="col-md-10">
		@RenderBody()
		</div>
		<footer class="border-top footer text-muted">
			<div class="container">
				&copy; 2023 - Library System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			</div>
		</footer>
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>
		@await RenderSectionAsync("Scripts", required: false)
	</div>
</body>
</html>
